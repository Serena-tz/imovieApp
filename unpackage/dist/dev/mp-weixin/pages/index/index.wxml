<view class="page"><swiper class="carousel" indicator-dots="{{true}}" autoplay="{{true}}"><block wx:for="{{slideList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><swiper-item><image class="carousel" src="{{item.image}}"></image></swiper-item></block></swiper><view class="page-block hot-wrapper"><view class="hot-title-wrapper"><image class="hot-icon" src="../../static/icos/hot.png" mode="widthFix"></image><view class="hot-title">热门超英</view></view><scroll-view class="hot-scroll" scroll-x="true"><view class="hot-scroll-wrapper"><block wx:for="{{hotMovieList}}" wx:for-item="item" wx:for-index="i" wx:key="i"><view class="single-moive"><image class="moive-thumb" src="{{item.cover}}"></image><view class="moive-name mt10 cutFont font14">{{''+item.name+''}}</view><movie-star vue-id="{{'8dd740cc-1-'+i}}" score="{{item.score}}" isScore="1" bind:__l="__l"></movie-star></view></block></view></scroll-view></view><view class="page-block hot-trailer"><view class="hot-title-wrapper"><image class="hot-icon" src="../../static/icos/interest.png" mode="widthFix"></image><view class="hot-title">热门预告</view></view><view class="trailer-list"><block wx:for="{{hotTrailerList}}" wx:for-item="trailer" wx:for-index="index" wx:key="index"><video class="trailer-video-item" id="{{trailer.id}}" src="{{trailer.trailer}}" poster="{{trailer.poster}}" controls></video></block></view></view><view class="page-block hot-trailer"><view class="hot-title-wrapper"><image class="hot-icon" src="../../static/icos/guess-u-like.png" mode="widthFix"></image><view class="hot-title">猜你喜欢</view></view><view class="guess-u-like"><block wx:for="{{guessULikeList}}" wx:for-item="ulike" wx:for-index="index" wx:key="index"><view class="guess-u-like-item"><image class="guess-img" src="{{ulike.cover}}" mode></image><view class="guess-desc"><view class="guess-desc-title cutFont">{{ulike.name}}</view><movie-star vue-id="{{'8dd740cc-2-'+index}}" score="{{ulike.score}}" isScore="0" bind:__l="__l"></movie-star><view class="guess-desc-info">{{''+ulike.basicInfo+''}}</view><view class="guess-desc-info">{{''+ulike.releaseDate+''}}</view></view><view class="guess-opt" data-gIndex="{{index}}" data-event-opts="{{[['tap',[['praiseMe',['$event']]]]]}}" bindtap="__e"><image class="praise-icon" src="../../static/icos/praise.png" mode></image><text class="praise-me">点赞</text><text class="praise-me animation-opacity" animation="{{animationDataArr[index]}}">+1</text></view></view></block></view></view></view>